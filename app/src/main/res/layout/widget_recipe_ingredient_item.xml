<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/app_name"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif"
        style="@style/TextAppearance.AppCompat.Large"/>
    <LinearLayout
        android:id="@+id/linear_layout_ingredients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tv_recipe_ingredient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif"
            android:hint="@string/nutella_or_other_chocolate_hazelnut_spread"
            android:padding="4dp"
            android:textColor="#000"
            style="@style/TextAppearance.AppCompat.Button" />
        <TextView
            android:id="@+id/tv_recipe_ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/_1_0"
            android:padding="4dp"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            style="@style/TextAppearance.AppCompat.Button"/>
    </LinearLayout>

</LinearLayout>